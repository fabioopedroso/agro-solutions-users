apiVersion: v1
kind: Secret
metadata:
  name: agrosolutions-secrets
  namespace: agrosolutions
type: Opaque
stringData:
  # Supabase Connection String
  # Substitua com suas credenciais reais do Supabase
  supabase-connection-string: "Host=SEU-HOST.supabase.com;Port=5432;Username=SEU-USER;Password=SUA-SENHA;Database=postgres;SSL Mode=Require;Trust Server Certificate=true"
  
  # RabbitMQ Credentials
  # ALTERE para credenciais fortes em produção!
  rabbitmq-user: "admin"
  rabbitmq-password: "ALTERAR-SENHA-FORTE-AQUI"
  
  # JWT Configuration
  # Gere uma chave secreta forte (mínimo 32 caracteres)
  jwt-key: "GERAR-CHAVE-JWT-FORTE-MINIMO-32-CARACTERES"
  jwt-issuer: "AgroSolutions"
  jwt-audience: "AgroSolutions.API"
